<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/main_bg"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--avatar start-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.40"/>

            <!--avatar end-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.60"/>

            <!--github icon end-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98"/>

            <!--name bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_101"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>

            <!--avatar top-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_102"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2"/>

            <!--avatar bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_103"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6"/>

            <!--bio top-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_104"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.82"/>

            <!--bio bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_105"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95"/>

            <!--number top-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_106"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.28"/>

            <!--number bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_107"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.41"/>

            <!--repo,followers bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_108"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.52"/>


            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/icons8_github"
                android:foreground="?android:selectableItemBackground"
                android:background="@drawable/round_outline"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_103"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_101"
                app:layout_constraintStart_toEndOf="@id/text_view_1"
                app:layout_constraintEnd_toEndOf="@id/guideline_percent_4"/>

            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="16sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_103"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_101"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_view_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="14sp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:singleLine="true"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_104"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_view_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="14sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@drawable/text_click_effect_2"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_106"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_107"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_view_1"/>

            <TextView
                android:id="@+id/text_view_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="14sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@drawable/text_click_effect_2"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_106"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_107"
                app:layout_constraintStart_toEndOf="@id/image_view_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_view_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="14sp"
                android:text="@string/init_repos"
                android:maxLines="1"
                android:textColor="@color/black"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_107"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_view_1"/>

            <TextView
                android:id="@+id/text_view_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="14sp"
                android:text="@string/init_followers"
                android:maxLines="1"
                android:textColor="@color/black"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_107"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_108"
                app:layout_constraintStart_toEndOf="@id/image_view_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_102"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_103"
                app:layout_constraintStart_toStartOf="@id/guideline_percent_1"
                app:layout_constraintEnd_toEndOf="@id/guideline_percent_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>