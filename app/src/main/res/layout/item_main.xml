<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--icon start-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02"/>

            <!--icon end-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.28"/>

            <!--name start-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.32"/>

            <!--name end-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98"/>

            <!--name top-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_101"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1"/>

            <!--name bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_102"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4"/>

            <!--url top-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_103"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

            <!--url bottom-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent_104"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>


            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:text="@string/init_name"
                android:maxLines="1"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_101"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_102"
                app:layout_constraintStart_toStartOf="@id/guideline_percent_3"
                app:layout_constraintEnd_toEndOf="@id/guideline_percent_4"/>

            <TextView
                android:id="@+id/text_view_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:text="@string/init_link"
                android:maxLines="1"
                android:textColor="#0000ff"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/guideline_percent_103"
                app:layout_constraintBottom_toBottomOf="@id/guideline_percent_104"
                app:layout_constraintStart_toStartOf="@id/guideline_percent_3"
                app:layout_constraintEnd_toEndOf="@id/guideline_percent_4"/>

            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_percent_1"
                app:layout_constraintEnd_toEndOf="@id/guideline_percent_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>