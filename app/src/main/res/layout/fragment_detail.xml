<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--description start-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <!--description end-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <!--description top-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_101"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>

    <!--description bottom-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_102"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"/>

    <!--login top-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_103"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01"/>

    <!--login bottom-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_104"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>

    <!--url top-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_105"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09"/>

    <!--url bottom-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_percent_106"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14"/>

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_percent_104"
        app:layout_constraintEnd_toEndOf="@id/guideline_percent_2"
        app:layout_constraintStart_toStartOf="@id/guideline_percent_1"
        app:layout_constraintTop_toTopOf="@id/guideline_percent_103"/>

    <!--https://icons8.com/icon/3tC9EQumUAuq/github-->
    <ImageView
        android:id="@+id/image_view_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icons8_github"
        android:foreground="?android:selectableItemBackground"
        android:background="@drawable/round_outline"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/guideline_percent_106"
        app:layout_constraintEnd_toEndOf="@id/guideline_percent_2"
        app:layout_constraintStart_toStartOf="@id/guideline_percent_1"
        app:layout_constraintTop_toTopOf="@id/guideline_percent_105"/>

    <TextView
        android:id="@+id/text_view_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="16sp"
        android:textColor="@drawable/text_click_effect"
        android:textStyle="bold"
        android:text="@string/init_followers"
        android:maxLines="1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_percent_106"
        app:layout_constraintEnd_toEndOf="@id/guideline_percent_2"
        app:layout_constraintStart_toEndOf="@id/image_view_2"
        app:layout_constraintTop_toTopOf="@id/guideline_percent_105"/>

    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="16sp"
        android:textColor="@drawable/text_click_effect"
        android:textStyle="bold"
        android:text="@string/init_repos"
        android:maxLines="1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_percent_106"
        app:layout_constraintEnd_toStartOf="@id/image_view_2"
        app:layout_constraintStart_toStartOf="@id/guideline_percent_1"
        app:layout_constraintTop_toTopOf="@id/guideline_percent_105"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_percent_101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_percent_106">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.20"
            app:layout_constraintBottom_toBottomOf="@id/pie_chart_1"
            app:layout_constraintEnd_toEndOf="@id/pie_chart_1"
            app:layout_constraintStart_toStartOf="@id/pie_chart_1"
            app:layout_constraintTop_toTopOf="@id/pie_chart_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_percent_102"
        app:layout_constraintEnd_toEndOf="@id/guideline_percent_2"
        app:layout_constraintStart_toStartOf="@id/guideline_percent_1"
        app:layout_constraintTop_toTopOf="@id/guideline_percent_101">

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/init_language"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeMinTextSize="16sp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_percent="0.02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_1"
            app:layout_constraintTop_toBottomOf="@id/text_view_3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>